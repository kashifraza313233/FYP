@model IEnumerable<SecuritySafeZone.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>user Accounts</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial;
        }

        .navbar-header {
            background: teal;
            color: white;
            height: 60px;
        }

        .button .button2 {
            color: white;
            height: 40px;
            text-decoration: none;
            font-size: 20px;
            cursor: pointer;
            width: 50px;
            display: block;
            margin-top: -55px;
            margin-left: 30px;
        }
    </style>
</head>
<body>
    <div class="navbar-header text-center">
        <fieldset>
            <legend>Manage Users Accounts</legend>
        </fieldset>
    </div>
    <div class="button">
        <a href="    https://localhost:44315/LoginAdmin/Dashboard"> <img class="button2" src="~/Content/arrow-112-xl.png" /></a>
    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNIC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNIC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNo)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @{if (item.status == 0)
                        {
                            @Html.ActionLink("Approve", "Approve", new { uid = item.Uid }, new { @class = "btn btn-success " })
                        }

                    }


                </td>
                <td>
                    @{if (item.status == 0)
                        {

                            @Html.ActionLink("Dissmiss", "Dissmiss", new { uid = item.Uid }, new { @class = "btn btn-danger" })
                        }
                    }
                </td>
            </tr>
        }

    </table>

</body>
</html>
