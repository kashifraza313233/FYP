
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SafeZone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .page-header {
            background-color: teal;
            color: white;
            height: 60px;
        }

        .panel-title {
            color: teal;
        }

        .buttons .button {
            background: teal; /* Green */
            margin-top: 10px;
            color: white;
            padding: 10px 40px;
            text-align: center;
            align-items: center;
            height: 50px;
            text-decoration: none;
            font-size: 20px;
            cursor: pointer;
            width: 250px;
            display: block;
        }

            .buttons .button:not(:last-child) {
                border-bottom: none; /* Prevent double borders */
            }

            .buttons.button:hover {
                background-color: teal;
            }
    </style>
</head>
<body>
    <div class="page-header text-center">
        <h1>SafeZone</h1>
        @*<p>Welcome <u>@TempData["LoginSuccessMessage"]</u></p>*@
    </div>
    <br />
    <center>
        <img src="~/Content/safezone.jpg" width="200px" height="200px" />
    </center>
    <div class="panel-title text-center">
        <h2>Lets Move Safely</h2>
    </div>
    <br />
    <center>
        <div class="buttons">
            <button class="button" onclick="document.location='https://localhost:44315/Login/Index'">Login</button>
            <button class="button" onclick="document.location='https://localhost:44315/Login/SignUp'">SignUp</button>
        </div>
    </center>
</body>
</html>
